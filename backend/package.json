{
  "name": "@cedar-terrace/backend",
  "version": "0.1.0",
  "private": true,
  "description": "Backend API and worker services",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "migrate": "node -r dotenv/config scripts/migrate.js",
    "migrate:create": "node -r dotenv/config scripts/create-migration.js",
    "seed": "npm run build && node -r dotenv/config scripts/seed.js",
    "db:reset": "npm run migrate && npm run seed"
  },
  "dependencies": {
    "@cedar-terrace/shared": "*",
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/client-sqs": "^3.490.0",
    "@aws-sdk/s3-request-presigner": "^3.490.0",
    "dotenv": "^16.4.0",
    "express": "^4.18.0",
    "pg": "^8.11.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.10.0",
    "@types/uuid": "^9.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
