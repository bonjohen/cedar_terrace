{
  "name": "cedar-terrace",
  "version": "0.1.0",
  "private": true,
  "description": "Parking enforcement and stall management system",
  "workspaces": [
    "backend",
    "frontend-admin",
    "frontend-recipient",
    "mobile",
    "shared"
